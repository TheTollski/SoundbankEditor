<UserControl x:Class="SoundbankEditor.SpecificHircItemEditorViews.SoundHircItemEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SoundbankEditor.SpecificHircItemEditorViews"
						 xmlns:main="clr-namespace:SoundbankEditor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600"
						 DataContextChanged="OnDataContextChanged">
	<StackPanel Width="600">
		<Label HorizontalAlignment="Center" FontSize="16">Sound Item Edit Options</Label>
		<main:IndividualFieldEditorView x:Name="ifevParentId" Margin="0,5,0,0" Title="Parent ID" IsValueAShortId="True" OnEditClicked="IfevEditDirectParentId_Click" />
		<main:IndividualFieldEditorView x:Name="ifevFileId" Margin="0,5,0,0" Title="File ID" IsValueAShortId="True" OnEditClicked="IfevEditFileId_Click" />
	</StackPanel>
</UserControl>
