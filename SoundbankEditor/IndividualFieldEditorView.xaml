<UserControl x:Class="SoundbankEditor.IndividualFieldEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SoundbankEditor"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="580">
	<DockPanel Width="580" Height="20" LastChildFill="False">
		<TextBlock x:Name="tbTitleAndValue" DockPanel.Dock="Left" MaxWidth="370" Text="Title: " />
		<Button x:Name="btnEdit" DockPanel.Dock="Right" Width="100" Height="20" Margin="5, 0, 0, 0" Content="Edit" Click="BtnEdit_Click"></Button>
		<Button x:Name="btnCopy" DockPanel.Dock="Right" Width="100" Height="20" Margin="5, 0, 0, 0" Content="Copy" Click="BtnCopy_Click"></Button>
	</DockPanel>
</UserControl>
